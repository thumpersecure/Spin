{
  "name": "sandiego-browser",
  "version": "3.0.0-sandiego",
  "description": "SANDIEGO Browser - Carmen Sandiego Edition: Privacy-focused OSINT browser with Tor integration and robust investigation tools. Where in the World Will You Search?",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "osint",
    "browser",
    "tor",
    "privacy",
    "investigation",
    "security",
    "electron",
    "chromium",
    "sandiego",
    "carmen-sandiego"
  ],
  "author": "SANDIEGO Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.sandiego.browser",
    "productName": "SANDIEGO Browser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network",
      "icon": "assets/icon.png"
    }
  }
}
