{
  "name": "sandiego-browser",
  "version": "3.1.0",
  "description": "SANDIEGO Browser - The OSINT Investigation Suite. A privacy-first browser with Tor integration, anti-fingerprinting, and comprehensive intelligence tools.",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "osint",
    "browser",
    "tor",
    "privacy",
    "investigation",
    "security",
    "electron",
    "chromium",
    "intelligence",
    "research"
  ],
  "author": "SANDIEGO Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.sandiego.browser",
    "productName": "SANDIEGO Browser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns",
      "darkModeSupport": true,
      "hardenedRuntime": true
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Network",
      "icon": "assets/icon.png",
      "desktop": {
        "StartupWMClass": "sandiego-browser"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
