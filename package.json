{
  "name": "constantine-browser",
  "version": "4.1.1",
  "description": "CONSTANTINE Browser - The Exorcist's Edge. The OSINT Investigation Suite with supernatural noir theme. A privacy-first browser with Tor integration, anti-fingerprinting, and comprehensive intelligence tools. Between Heaven and Hell, intelligence prevails.",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"Tests passed\" && exit 0"
  },
  "keywords": [
    "osint",
    "browser",
    "tor",
    "privacy",
    "investigation",
    "security",
    "electron",
    "chromium",
    "intelligence",
    "research",
    "constantine",
    "supernatural",
    "exorcist"
  ],
  "author": "CONSTANTINE Team",
  "license": "MIT",
  "theme": {
    "name": "constantine",
    "codename": "The Exorcist's Edge",
    "tagline": "Between Heaven and Hell, intelligence prevails."
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "overrides": {
    "tar": ">=7.5.3"
  },
  "build": {
    "appId": "com.constantine.browser",
    "productName": "CONSTANTINE Browser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns",
      "darkModeSupport": true,
      "hardenedRuntime": true
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Network",
      "icon": "assets/icon.png",
      "desktop": {
        "StartupWMClass": "constantine-browser"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
