      "effects": {
        "animations": ["constantine-pulse", "hellfire-flicker", "sigil-glow", "exorcism-fade"],
        "transitions": {
          "fast": "0.15s ease",
          "normal": "0.25s ease",
          "slow": "0.4s ease"
