      "typography": {
        "fontSans": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif",
        "fontMono": "'SF Mono', 'Fira Code', 'Consolas', 'Monaco', monospace"
