  "modes": {
    "dark": {
      "description": "Dark mode optimized for low-light investigations",
      "defaultTheme": "constantine",
      "availableThemes": ["constantine", "carmen", "tracey"]
    },
    "light": {
      "description": "Light mode for reduced eye strain",
      "defaultTheme": "constantine-light",
      "availableThemes": ["constantine-light", "carmen-light"]
    },
    "auto": {
      "description": "Automatically switch based on system preference or time of day",
      "followSystem": true,
      "timeBasedSwitch": {
        "enabled": false,
        "lightStart": "06:00",
        "lightEnd": "18:00"
      }
    }
  },
  "accessibility": {
    "reduceMotion": false,
    "highContrast": false,
    "largerText": false,
    "focusIndicators": true
