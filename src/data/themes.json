    "constantine": {
      "id": "constantine",
      "name": "Constantine",
      "codename": "The Exorcist's Edge",
      "version": "4.2.0",
      "tagline": "Between Heaven and Hell, intelligence prevails.",
      "inspiration": "Supernatural noir - inspired by the realm between light and darkness",
