        "accent": {
          "hellfire": "#E65C00",
          "celestial": "#00CED1",
          "sulfur": "#FFD700",
          "blood": "#8B0000",
          "holy": "#F0E68C"
        },
        "background": {
          "base": "#0A0A0C",
