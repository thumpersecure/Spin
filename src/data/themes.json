        "shadows": {
          "glow": "0 0 20px rgba(212, 163, 45, 0.4)",
          "hellfire": "0 0 30px rgba(230, 92, 0, 0.3)",
          "celestial": "0 0 20px rgba(0, 206, 209, 0.3)"
